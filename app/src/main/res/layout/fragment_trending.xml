                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include layout="@layout/card_layout_trending"/>
                <include layout="@layout/card_layout_trending"/>
                <include layout="@layout/card_layout_trending"/>
                <include layout="@layout/card_layout_trending"/>
                <include layout="@layout/card_layout_trending"/>
                <include layout="@layout/card_layout_trending"/>
                <include layout="@layout/card_layout_trending"/>
                <include layout="@layout/card_layout_trending"
                    android:layout_marginBottom="60dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

</ScrollView>